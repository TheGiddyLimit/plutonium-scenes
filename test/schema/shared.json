{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "shared.json",
	"version": "1.0.2",

	"$defs": {
		"wall": {
			"type": "object",

			"properties": {
				"c": {
					"type": "array",
					"items": {"type": "number"},
					"minItems": 4,
					"maxItems": 4
				},

				"light": {"type": "number"},
				"move": {"type": "number"},
				"sight": {"type": "number"},
				"sound": {"type": "number"},
				"dir": {"type": "number"},
				"door": {"type": "number"},
				"ds": {"type": "number"},
				"doorSound": {"type": "string"},

				"threshold": {
					"type": "object",

					"properties": {
						"light": {"type": "number"},
						"sight": {"type": "number"},
						"sound": {"type": "number"},
						"attenuation": {"type": "boolean"}
					}
				}
			},

			"additionalProperties": false
		},

		"wallArray": {
			"type": "array",
			"items": {"$ref": "#/$defs/wall"},
			"minItems": 1,
			"uniqueItems": true
		},

		"light": {
			"type": "object",

			"properties": {
				"x": {"type": "number"},
				"y": {"type": "number"},

				"rotation": {"type": "number"},

				"walls": {"type": "boolean"},
				"vision": {"type": "boolean"},
				"hidden": {"type": "boolean"},

				"config": {
					"type": "object",

					"minProperties": 1
				}
			},

			"additionalProperties": false
		},

		"lightArray": {
			"type": "array",
			"items": {"$ref": "#/$defs/light"},
			"minItems": 1,
			"uniqueItems": true
		},

		"map": {
			"type": "object",

			"properties": {
				"name": {"type": "string"},
				"source": {"type": "string"},
				"walls": {"$ref": "#/$defs/wallArray"},
				"lights": {"$ref": "#/$defs/lightArray"}
			},

			"required": ["name", "source"],
			"minProperties": 3,
			"additionalProperties": false
		},

		"mapArray": {
			"type": "array",
			"items": {"$ref": "#/$defs/map"},
			"minItems": 1,
			"uniqueItems": true
		}
	}
}
